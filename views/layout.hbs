    <script type="text/javascript">
        $(document).ready( function () {
            $('#myTable').DataTable({
                "bLengthChange": true,

                dom: 'lfrtiBp',
                buttons: [{text:'Экспорт таблицы:'}, {extend: 'excel',
                    className: 'btn btn-default',
                    exportOptions: {
                        columns: 'th:not(:last-child)'}},
                    {extend: 'pdf',
                        className: 'btn btn-default',
                        exportOptions: {
                            columns: 'th:not(:last-child)'}
                    } ]
            });

        } );
    </script>
    <style type="text/css">
        .container {
            margin-top:2%;
        }
        div.dt-buttons{
            position:relative;
            float:left;
        }
        div.dataTables_length{
            position:relative;
            float:left;
        }
